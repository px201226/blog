ode":{"id":"afe43c76-2a11-52b8-8cd2-2e40f28c9e76","fields":{"slug":"/socket_internal/"},"frontmatter":{"title":"요청이 급증하는 상황의 Connection reset by peer 트러블 슈팅"}}},{"node":{"id":"90fb6a58-a0cb-591d-bac1-d4104b627237","fields":{"slug":"/mysql-transaction-lock/"},"frontmatter":{"title":"MySQL 잠금과 트랜잭션 Deep Dive"}}}]},"previous":{"fields":{"slug":"/java-nio-buffer/"},"frontmatter":{"title":"Java NIO - Buffer"}},"next":{"fields":{"slug":"/spring-core-container/"},"frontmatter":{"title":"스프링으로 알아보는 IoC 컨테이너의 원리와 이해"}}},"pageContext":{"id":"827c7ba6-09c2-5240-a88e-499013d65833","series":null,"previousPostId":"b21ac7fc-284e-5536-bdc7-1705a044f58b","nextPostId":"0d7d38a2-3c38-586d-a50b-6c6164ba47fd"}},"staticQueryHashes":[],"slicesMap":{}}